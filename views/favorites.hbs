<h1>Favorites</h1>

<div class="fav-list">
    {{#each favorites}}
        <div class="fav-item">
            <a href="{{this.nasa_url}}">
                <img src="{{this.url}}" class="fav-image">
            </a>
            <span class="fav-title">{{this.title}}</span>
            <span class="fav-data">{{this.date}}</span>
        </div>
    {{else}}
        <p>No favorites saved yet.</p>
    {{/each}}
</div>

{{#if favorites}}
    <div class="all-delete">
        <form action="favorites/deleteAll" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete all images">
        </form>
    </div>
{{/if}}